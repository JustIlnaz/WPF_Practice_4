<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="400" Width="300">
    <Grid>
        <TextBox x:Name="ResultTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10" FontSize="20" TextAlignment="Right" IsReadOnly="True" />

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="7" Grid.Row="1" Grid.Column="0" Width="50" Height="50" Click="DigitButton_Click" Tag="7" />
            <Button Content="8" Grid.Row="1" Grid.Column="1" Width="50" Height="50" Click="DigitButton_Click" Tag="8" />
            <Button Content="9" Grid.Row="1" Grid.Column="2" Width="50" Height="50" Click="DigitButton_Click" Tag="9" />
            <Button Content="/" Grid.Row="1" Grid.Column="3" Width="50" Height="50" Click="OperationButton_Click" Tag="/" />

            <Button Content="4" Grid.Row="2" Grid.Column="0" Width="50" Height="50" Click="DigitButton_Click" Tag="4" />
            <Button Content="5" Grid.Row="2" Grid.Column="1" Width="50" Height="50" Click="DigitButton_Click" Tag="5" />
            <Button Content="6" Grid.Row="2" Grid.Column="2" Width="50" Height="50" Click="DigitButton_Click" Tag="6" />
            <Button Content="*" Grid.Row="2" Grid.Column="3" Width="50" Height="50" Click="OperationButton_Click" Tag="*" />

            <Button Content="1" Grid.Row="3" Grid.Column="0" Width="50" Height="50" Click="DigitButton_Click" Tag="1" />
            <Button Content="2" Grid.Row="3" Grid.Column="1" Width="50" Height="50" Click="DigitButton_Click" Tag="2" />
            <Button Content="3" Grid.Row="3" Grid.Column="2" Width="50" Height="50" Click="DigitButton_Click" Tag="3" />
            <Button Content="-" Grid.Row="3" Grid.Column="3" Width="50" Height="50" Click="OperationButton_Click" Tag="-" />

            <Button Content="C" Grid.Row="4" Grid.Column="0" Width="50" Height="50" Click="ClearButton_Click" />
            <Button Content="0" Grid.Row="4" Grid.Column="1" Width="50" Height="50" Click="DigitButton_Click" Tag="0" />
            <Button Content="=" Grid.Row="4" Grid.Column="2" Width="50" Height="50" Click="EqualButton_Click" />
            <Button Content="+" Grid.Row="4" Grid.Column="3" Width="50" Height="50" Click="OperationButton_Click" Tag="+" />
        </Grid>
    </Grid>
</Window>